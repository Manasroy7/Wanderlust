<% layout("layouts/boilerplate") %>
<style>
    body{
        /* background-color: rgb(241, 165, 42); */
        background: linear-gradient(57deg, #f1a52a 30%, #00000000 30%),
        linear-gradient(25deg, #e91e63 60%, #ff5722 60%);
    }
    .box {
        background-color: rgb(204, 233, 146);
        border: 1px solid aquamarine;
        margin-top: 3rem !important;
        border-radius: 1rem;
        box-shadow: 8px 10px 15px rgba(95, 230, 176, 0.60);
    }
    .box h2 {
        color: rgba(10, 189, 244, 0.811);
        margin-left: 8%;
    }
    .box-text {
        margin-left: 12%;
    }
    @media (min-width: 200px) and (max-width: 750px) {
        .box {
            margin: 5vh 2vh 5vh 2vh;
            padding: 5vh;
        }
    }
    @media(min-width: 751px) and (max-width: 1024px) {
        .box{
            width: 50vw;
            height: 50vh;
            padding: 5vh;
            margin: 25%;

        }
    }
    @media (min-width: 1025px) {
        .box {
            width: 40vw;
            height: 50vh;
            margin: 25%;
            margin-bottom: 3rem;
            padding: 5vh;
        }
    }
</style>

<div class="row mt-3 box">
    <h2 class="col-6 offset-3"><b>Login</b></h2>
    <div class="col-7 offset-3 box-text">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" name="username" class="form-control" placeholder="Enter Username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" name="password" class="form-control" placeholder="Enter Password" required>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>